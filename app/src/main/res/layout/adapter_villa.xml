<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_villa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="100"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="65"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/propertyid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"
                    ></TextView>

                <TextView
                    android:id="@+id/img_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="4BR+Study Room+Store"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/black_color"
                    android:textStyle="bold" />


                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt1"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:alpha="0.9"
                        android:background="@drawable/rounded_edittext_color"
                        android:paddingStart="10dp"
                        android:text="Area - 5,464.99 sq ft"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textSize="11sp">
                    </TextView>



            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
               android:fontFamily="sans-serif-medium"
                android:textColor="@color/light_black"
                android:textSize="11sp"
                android:text="Apartment no.706,Forte T1"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                >

            </TextView>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="100"

                  >

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity= "left"
                      android:paddingLeft="2dp"
                      android:layout_weight="50"
                      android:textSize="10sp"
                      android:fontFamily="sans-serif-medium"
                      android:text="Starting Amount:">
                  </TextView>

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Current Bid Amount:"
                      android:paddingLeft="2dp"
                      android:textSize="10sp"
                      android:fontFamily="sans-serif-medium"
                      android:layout_weight="50"
                      >

                  </TextView>


              </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:padding="5dp"
                    android:layout_weight="100"
                    >

                    <TextView
                        android:id="@+id/txt_startamt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:text="ACR,6755">

                    </TextView>

                    <TextView
                        android:id="@+id/current_bid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ACR,6755"
                        android:paddingLeft="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_weight="50">

                    </TextView>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>




    </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/viewdetails"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="View Details"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="-22dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/con_villa"
        android:layout_alignParentRight="true"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/yellow_color"


        >

    </Button>







</RelativeLayout>

