<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:id="@+id/nav_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/nav_img"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="20dp"
       android:background="@drawable/menu"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent">
   </ImageView>

    <TextView
        android:id="@+id/txt_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_semibold"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/nav_img"
        >
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/user"
        app:layout_constraintTop_toBottomOf="@+id/nav_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </com.mikhaellopez.circularimageview.CircularImageView>

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohd Shaikh"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_semibold"
         android:textColor="@color/black"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nav"
        app:layout_constraintLeft_toRightOf="@+id/user_profile">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>